// Faça um algoritmo que receba dois números reais, calcule a média aritmética entre os números e imprima o resultado.

programa {
  funcao inicio() {

    real numero_1, numero_2, media

    escreva("Digite o primeiro número: ")
    leia(numero_1)

    escreva("Digite o segundo número: ")
    leia(numero_2)

    media = (numero_1 + numero_2)/2

    escreva("A média é ", media)
  }
}

